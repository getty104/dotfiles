{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "ENABLE_TOOL_SEARCH": "1",
    "ENABLE_LSP_TOOL": "1"
  },
  "permissions": {
    "allow": [
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(docker compose run:*)",
      "Bash(grep:*)",
      "Bash(npm run test:unit:*)",
      "Bash(npm run format:*)",
      "Bash(npm run lint)",
      "Bash(git commit:*)",
      "Bash(gh issue view:*)",
      "Read(//Users/getty104/**)"
    ],
    "deny": [],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); current_dir=$(echo \"$input\" | jq -r '.workspace.current_dir'); basename_dir=$(basename \"$current_dir\"); printf \"$(whoami)@$(hostname -s):$basename_dir\""
  },
  "enabledPlugins": {
    "getty104@marketplace": true,
    "claude-mem@thedotmack": true,
    "code-review@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "document-skills@anthropic-agent-skills": true,
    "commit-commands@claude-code-plugins": true,
    "vtsls@claude-code-lsps": true
  },
  "language": "Japanese",
  "alwaysThinkingEnabled": false,
  "feedbackSurveyState": {
    "lastShownTime": 1754056697854
  }
}
