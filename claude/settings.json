{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "ENABLE_TOOL_SEARCH": "true",
    "ENABLE_LSP_TOOL": "true"
  },
  "permissions": {
    "allow": [
      "Bash(docker compose run:*)",
      "Bash(grep:*)",
      "Bash(npm run:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "mcp__pencil"
    ],
    "deny": [
      "NotebookEdit"
    ],
    "defaultMode": "default"
  },
  "model": "sonnet",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); current_dir=$(echo \"$input\" | jq -r '.workspace.current_dir'); basename_dir=$(basename \"$current_dir\"); printf \"$(whoami)@$(hostname -s):$basename_dir\""
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true,
    "frontend-design@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "base-tools@getty104": true,
    "typescript-lsp@claude-plugins-official": true,
    "sentry@claude-plugins-official": true
  },
  "language": "Japanese",
  "autoUpdatesChannel": "latest",
  "skipDangerousModePermissionPrompt": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754056697854
  }
}
